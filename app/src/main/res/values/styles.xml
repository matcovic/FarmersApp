<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navigationTheme">

<!--        When icon is selected-->
        <item name="colorPrimary">#2b580c</item>
<!--        Background color when selected-->
        <item name="colorControlHighlight">#d8ebb5</item>
    </style>

    <style name="TextInputLayoutWithPrimaryColor" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="LoginButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">#639a67</item>
    </style>

</resources>
