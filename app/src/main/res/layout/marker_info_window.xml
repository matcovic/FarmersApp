<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/markerWindow_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tractor_image"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/markerWindow_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ধান রোপণ যন্ত্র"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/markerWindow_priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/markerWindow_type"
            android:text="@string/per_hour_price"
            android:textStyle="bold|italic"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/markerWindow_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/markerWindow_type"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/markerWindow_priceText"
            android:text="56565"
            android:textStyle="italic"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_below="@+id/markerWindow_type"
            android:layout_toEndOf="@+id/markerWindow_price"
            android:text="টাকা"
            android:textStyle="italic"
            android:textColor="#000"/>

        <Button
            android:id="@+id/markerWindow_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_fordetails"
            android:textColor="@android:color/holo_red_dark"
            android:background="@color/fui_transparent"
            android:layout_toEndOf="@+id/currency"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</LinearLayout>