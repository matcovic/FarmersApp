<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_main"
        app:cardCornerRadius="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_success_story"/>

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/productImage"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productTitle"
                android:layout_marginStart="83dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/productImage"
                android:text="Product Id"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/productId2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productTitle"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/productImage"
                android:text="Product Id:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="12dp"
                android:text="Selling Status"
                android:textColor="#000000" />


            <RadioGroup
                android:id="@+id/radioGroup_toggle"
                android:layout_width="93dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="0dp"

                android:checkedButton="@+id/calm"
                android:orientation="horizontal"
                android:scrollbarSize="2dp">

                <RadioButton
                    android:id="@+id/radioButton_unsold"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:button="@null"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Unsold"
                    android:textColor="#FF0000"
                    android:textSize="8sp" />

                <RadioButton
                    android:id="@+id/radioButton_sold"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:button="@null"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Sold"
                    android:textColor="#06A12B"
                    android:textSize="8sp" />

            </RadioGroup>
        </RelativeLayout>
        
        
    </androidx.cardview.widget.CardView>

</LinearLayout>