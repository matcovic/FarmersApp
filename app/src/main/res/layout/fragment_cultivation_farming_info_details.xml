<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cultivation_FarmingInfo_DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/farmingInfoTitle_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="উদ্ভিদ নির্বাচন"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/farmingInfoImage_details"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/farmingInfoTitle_details"
                android:layout_marginBottom="15dp"
                android:scaleType="fitXY"

                android:src="@drawable/test_success_story" />

            <TextView
                android:id="@+id/farmingInfoArticle_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farmingInfoImage_details"
                android:text="Article on the farming tips"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>