<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/successStoryCardView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#d8ebb5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_story_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_success_story"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/item_story_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/item_story_image"
                    app:layout_constraintStart_toStartOf="@+id/item_story_image"
                    app:layout_constraintTop_toTopOf="@+id/item_story_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/item_story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story of a farmer"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/item_story_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story of a farmerStory of a farmerStory of a farmerStory of a farmerStory of a farmerStory of a farmerStory of a farmer"
                android:textSize="9sp"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>