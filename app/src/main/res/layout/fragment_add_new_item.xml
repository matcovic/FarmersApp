<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".AddNewItemFragment">


    <ScrollView
        android:id="@+id/scrollview_item_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Region:" />

            <Spinner
                android:id="@+id/spinner_region"
                android:layout_width="325dp"
                android:layout_height="23dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Area:" />

            <Spinner
                android:id="@+id/spinner_area"
                android:layout_width="325dp"
                android:layout_height="23dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintVertical_bias="0.115" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Category:" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="325dp"
                android:layout_height="23dp"
                android:layout_marginBottom="30dp"

                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintVertical_bias="0.271" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Condition/Type:" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.221"
                app:layout_constraintVertical_bias="0.178">

                <RadioButton
                    android:id="@+id/radioButton_used"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:text="Used" />

                <RadioButton
                    android:id="@+id/radioButton_new"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="New" />

                <RadioButton
                    android:id="@+id/radioButton_both"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Both" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="পদবি"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="বিবরণ"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="text|textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="দাম"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Picture:"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_demopic1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/upload_image_icon"
                    app:layout_constraintHorizontal_bias="0.214"
                    app:layout_constraintVertical_bias="0.77" />

                <ImageView
                    android:id="@+id/imageView_demopic2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/upload_image_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/oval_button_shape"
                    android:elevation="10dp"
                    android:text="Submit"
                    app:layout_constraintHorizontal_bias="0.887"
                    app:layout_constraintVertical_bias="0.894" />

                <Button
                    android:id="@+id/button_preview"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_button_shape"
                    android:elevation="50dp"
                    android:text="Preview"
                    app:layout_constraintVertical_bias="0.894" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="24sp" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>